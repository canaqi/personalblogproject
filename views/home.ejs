<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
        <div class="container">
            <a class="navbar-brand" href="#">Logo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Create Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Go to Home Page</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <h1>Welcome, <%= username %>!</h1>

        <h2>Blog Posts</h2>
        <% blogPosts.forEach((blogPost) => { %>
            <div class="blog-container">
                <div class="blog-content">
                    <h3 class="blog-title"><%= blogPost.title %></h3>
                    <div class="blog-icons">
                        <a href="/blogpost/<%= blogPost.id %>/edit"><i class="fas fa-edit"></i></a>
                        <form id="delete-form-<%= blogPost.id %>" action="/blogpost/<%= blogPost.id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="delete-btn"><i class="fas fa-trash"></i></button>
                        </form>
                    </div>
                </div>
                <p><%= blogPost.content %></p>
                <% if (blogPost.image) { %>
                    <img src="/uploads/<%= blogPost.image %>" alt="Blog Image" />
                <% } %>
                <hr>
            </div>
        <% }) %>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
</body>
</html>
